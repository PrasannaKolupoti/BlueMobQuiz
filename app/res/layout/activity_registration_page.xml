<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.mc.grp6.bluemobquiz.RegistrationPage">
    <include layout="@layout/header" />
    <TextView
        android:id="@+id/registrationHeading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="REGISTRATION"
        android:textSize="40dp"
        android:textAlignment="center"/>
    <TableLayout
        android:id="@+id/registrationForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrationHeading"
        android:stretchColumns="1">

        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/name"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Name"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/nameValue"
                android:layout_column="1"
                android:hint="Enter your name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="20dp"/>

        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/userName"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Username"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/userNameValue"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Enter your username"
                android:textSize="20dp"/>

        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/password"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="Password"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/passwordValue"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Enter password"
                android:textSize="20dp"
                android:inputType="textPassword"/>
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/confirmPassword"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="Confirm Password"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/confirmPasswordValue"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Re-enter the password"
                android:inputType="textPassword"
                android:textSize="20dp"/>

        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/registerButton"
        android:layout_column="1"
        android:layout_below="@id/registrationForm"
        android:layout_gravity="center"
        android:text="Register"
        android:textSize="20dp"/>
</LinearLayout>
