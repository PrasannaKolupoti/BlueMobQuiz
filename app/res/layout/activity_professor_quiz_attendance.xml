<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mc.grp6.bluemobquiz.ProfessorQuizAttendance">
    <include layout="@layout/header" />
    <TextView
        android:id="@+id/quizAttendanceHeading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="ATTENDANCE"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/attendanceQuizName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Quiz 1"
        android:textSize="25dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:id="@+id/headings">
        <TableRow>
            <TextView
                android:id="@+id/studentNames"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight=".75"
                android:text="Name"
                android:textSize="20dp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/marksHeading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight=".25"
                android:text="Marks"
                android:textSize="20dp"
                android:layout_gravity="start"/>
        </TableRow>
    </TableLayout>
    <ListView
        android:id="@+id/studentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="Student name"
        android:textAlignment="textStart"
        android:textSize="20dp" />

</LinearLayout>
