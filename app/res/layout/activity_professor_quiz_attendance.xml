<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.mc.grp6.bluemobquiz.ProfessorQuizAttendance">
    <!-- Image Source: http://www.photos-public-domain.com/wp-content/uploads/2012/05/light-blue-paper-texture.jpg-->
    <include layout="@layout/header" />
    <TextView
        android:id="@+id/quizAttendanceHeading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="ATTENDANCE"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/attendanceQuizName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Quiz 1"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:id="@+id/headings">
        <TableRow>
            <TextView
                android:id="@+id/studentNames"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight=".60"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/marksHeading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight=".20"
                android:text="Marks"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/rankHeading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_weight=".20"
                android:text="Rank"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="start"/>
        </TableRow>
    </TableLayout>
    <ListView
        android:id="@+id/studentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="Student name"
        android:textColor="#FFFFFF"
        android:textAlignment="textStart"
        android:textSize="20dp" />

</LinearLayout>
