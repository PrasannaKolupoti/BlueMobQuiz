<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mc.grp6.bluemobquiz.StudentAttemptingQuiz">
    <!-- Image Source: http://www.intrawallpaper.com/static/images/recycled_texture_background_by_sandeep_m-d6aeau9_PZ9chud.jpg-->
    <include layout="@layout/header" />
    <TableLayout
        android:id="@+id/quizNameAndTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentQuizName"
        android:stretchColumns="0">
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/studentQuizName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:text="Quiz 1"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textAlignment="center"/>
            <!--Image Source: https://pixabay.com/en/stopwatch-timer-clock-symbol-icon-2624277/-->
            <ImageView
                android:id="@+id/timerImage"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_column="1"
                android:src="@drawable/timer"/>
            <TextView
                android:id="@+id/timer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/studentQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizNameAndTimer"
        android:stretchColumns="1">

        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/studentQuestionNumber"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1 "
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/studentQuestion"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Question"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentQuestionBody">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="A "
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/studentOption1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Option 1"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="B "
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/studentOption2"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Option 2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C "
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/studentOption3"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Option 3"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="D "
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/studentOption4"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Option 4"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow></TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/studentAnswer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Answer "
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_column="0"/>

            <Spinner
                android:id="@+id/studentAnswerSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:popupBackground="@drawable/spinner"
                android:entries="@array/studentAnswerChoice"
                android:prompt="@string/studentAnswerPrompt" />
            <!--Image source: https://pixabay.com/en/background-tree-wood-texture-2132910/-->
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:layout_below="@id/studentQuestionBody">
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/studentNext"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Next"
                android:background="#1F5E60"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/studentSubmit"
                android:layout_column="1"
                android:layout_below="@id/registrationForm"
                android:layout_gravity="center"
                android:text="  Submit  "
                android:background="#1F5E60"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>